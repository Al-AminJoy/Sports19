<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.trustedoffer.sports19">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity.LiveScoreActivity"></activity>
        <activity android:name=".Activity.GalleryActivity" />
        <activity android:name=".Activity.ScheduleActivity" />
        <activity android:name=".Activity.RankingActivity" />
        <activity android:name=".Activity.PointTableActivity" />
        <activity android:name=".Activity.VideoActivity" />
        <activity android:name=".Activity.NewsActivity" />
        <activity android:name=".Activity.LiveTvActivity" />
        <activity
            android:name=".Activity.HomeActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".Activity.MainActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>