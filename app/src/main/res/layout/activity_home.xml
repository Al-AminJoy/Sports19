<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.HomeActivity"
    android:id="@+id/HomeDrawerId"
    >
    <include
        android:id="@+id/tbhomeid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/home_design_content"
        />
    <android.support.design.widget.NavigationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:itemTextColor="@color/whiteColor"
        android:background="@color/whiteColor"
        app:itemIconTint="@color/darkColor"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:background="@color/basicColor"
                >
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/splash_icon"
                    android:layout_gravity="center"
                    android:padding="5dp"

                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="Sports 19"
                    android:textColor="@color/whiteColor"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:padding="5dp"
                    />


            </LinearLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/tvNavHomeLiveTvId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Live Tv"
                        android:textSize="20sp"
                        android:textColor="@color/blackColor"
                        android:layout_marginLeft="10dp"

                        android:drawableLeft="@drawable/ic_arrow"
                        android:padding="10dp"
                        />
                    <TextView
                        android:id="@+id/tvNavHomeLiveScoreId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Live Score"
                        android:textSize="20sp"
                        android:textColor="@color/blackColor"
                        android:layout_marginLeft="10dp"

                        android:drawableLeft="@drawable/ic_arrow"
                        android:padding="10dp"
                        />
                    <TextView
                        android:id="@+id/tvNavHomePointTableId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Point Table"
                        android:textSize="20sp"
                        android:textColor="@color/blackColor"
                        android:layout_marginLeft="10dp"

                        android:drawableLeft="@drawable/ic_arrow"
                        android:padding="10dp"
                        />
                    <TextView
                        android:id="@+id/tvNavHomeCricNewsId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cricket News"
                        android:textSize="20sp"
                        android:textColor="@color/blackColor"
                        android:layout_marginLeft="10dp"

                        android:drawableLeft="@drawable/ic_arrow"
                        android:padding="10dp"
                        />
                    <TextView
                        android:id="@+id/tvNavHomeScheduleId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Schedules"
                        android:textSize="20sp"
                        android:textColor="@color/blackColor"
                        android:layout_marginLeft="10dp"

                        android:drawableLeft="@drawable/ic_arrow"
                        android:padding="10dp"
                        />
                    <TextView
                        android:id="@+id/tvNavHomeRankingId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rankings"
                        android:textSize="20sp"
                        android:textColor="@color/blackColor"
                        android:layout_marginLeft="10dp"

                        android:drawableLeft="@drawable/ic_arrow"
                        android:padding="10dp"
                        />

                    <TextView
                        android:id="@+id/tvNavHomeGalleryId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Gallery"
                        android:textSize="20sp"
                        android:textColor="@color/blackColor"
                        android:layout_marginLeft="10dp"

                        android:drawableLeft="@drawable/ic_arrow"
                        android:padding="10dp"
                        />

                    <TextView
                        android:id="@+id/tvNavHomeVideoId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cricket Video"
                        android:textSize="20sp"
                        android:textColor="@color/blackColor"
                        android:layout_marginLeft="10dp"
                        android:drawableLeft="@drawable/ic_arrow"
                        android:padding="10dp"
                        />

                    <TextView
                        android:id="@+id/tvNavHomeRateUsId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rate Us"
                        android:textSize="20sp"
                        android:textColor="@color/blackColor"
                        android:layout_marginLeft="10dp"

                        android:drawableLeft="@drawable/ic_arrow"
                        android:padding="10dp"
                        />
                    <TextView
                        android:id="@+id/tvNavHomeFeedBackId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Feedback"
                        android:textSize="20sp"
                        android:textColor="@color/blackColor"
                        android:layout_marginLeft="10dp"
                        android:drawableLeft="@drawable/ic_arrow"
                        android:padding="10dp"
                        android:layout_marginBottom="10dp"
                        />

                </LinearLayout>

            </ScrollView>

        </LinearLayout>


    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>