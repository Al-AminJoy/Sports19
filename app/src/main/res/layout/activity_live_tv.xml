<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.LiveTvActivity"
    android:id="@+id/LiveTvDrawerId"
    >
    <include
        android:id="@+id/tbhomecontentid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/live_tv_content"
        />
    <android.support.design.widget.NavigationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:itemTextColor="@color/whiteColor"
        android:background="@color/whiteColor"
        app:itemIconTint="@color/darkColor"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:background="@color/basicColor"
                >
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/splash_icon"
                    android:layout_gravity="center"
                    android:padding="5dp"

                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="Sports 19"
                    android:textColor="@color/whiteColor"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:padding="5dp"
                    />


            </LinearLayout>

            <TextView
                android:id="@+id/tvNavLiveTv_LiveTvId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Live Tv"
                android:textSize="20sp"
                android:textColor="@color/blackColor"
                android:layout_marginLeft="10dp"

                android:drawableLeft="@drawable/ic_arrow"
                android:padding="10dp"
                />
            <TextView
                android:id="@+id/tvNavLiveTvLiveScoreId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Live Score"
                android:textSize="20sp"
                android:textColor="@color/blackColor"
                android:layout_marginLeft="10dp"

                android:drawableLeft="@drawable/ic_arrow"
                android:padding="10dp"
                />
            <TextView
                android:id="@+id/tvNavLiveTvPointTableId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Point Table"
                android:textSize="20sp"
                android:textColor="@color/blackColor"
                android:layout_marginLeft="10dp"

                android:drawableLeft="@drawable/ic_arrow"
                android:padding="10dp"
                />
            <TextView
                android:id="@+id/tvNavLiveTvCricNewsId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cricket News"
                android:textSize="20sp"
                android:textColor="@color/blackColor"
                android:layout_marginLeft="10dp"

                android:drawableLeft="@drawable/ic_arrow"
                android:padding="10dp"
                />
            <TextView
                android:id="@+id/tvNavLiveTvScheduleId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Schedules"
                android:textSize="20sp"
                android:textColor="@color/blackColor"
                android:layout_marginLeft="10dp"

                android:drawableLeft="@drawable/ic_arrow"
                android:padding="10dp"
                />
            <TextView
                android:id="@+id/tvNavLiveTvRankingId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rankings"
                android:textSize="20sp"
                android:textColor="@color/blackColor"
                android:layout_marginLeft="10dp"

                android:drawableLeft="@drawable/ic_arrow"
                android:padding="10dp"
                />
            <TextView
                android:id="@+id/tvNavLiveTvSeriesId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Series Details"
                android:textSize="20sp"
                android:textColor="@color/blackColor"
                android:layout_marginLeft="10dp"

                android:drawableLeft="@drawable/ic_arrow"
                android:padding="10dp"
                />
            <TextView
                android:id="@+id/tvNavLiveTvGalleryId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gallery"
                android:textSize="20sp"
                android:textColor="@color/blackColor"
                android:layout_marginLeft="10dp"

                android:drawableLeft="@drawable/ic_arrow"
                android:padding="10dp"
                />
            <TextView
                android:id="@+id/tvNavLiveTvVideoId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cricket Video"
                android:textSize="20sp"
                android:textColor="@color/blackColor"
                android:layout_marginLeft="10dp"

                android:drawableLeft="@drawable/ic_arrow"
                android:padding="10dp"
                />
            <TextView
                android:id="@+id/tvNavLiveTvRateUsId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rate Us"
                android:textSize="20sp"
                android:textColor="@color/blackColor"
                android:layout_marginLeft="10dp"

                android:drawableLeft="@drawable/ic_arrow"
                android:padding="10dp"
                />
            <TextView
                android:id="@+id/tvNavLiveTvFeedBackId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Feedback"
                android:textSize="20sp"
                android:textColor="@color/blackColor"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@drawable/ic_arrow"
                android:padding="10dp"
                />




        </LinearLayout>


    </android.support.design.widget.NavigationView>


</android.support.v4.widget.DrawerLayout>