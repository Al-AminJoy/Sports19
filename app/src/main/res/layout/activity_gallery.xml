<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/GalleryDrawerId"
    tools:context=".Activity.GalleryActivity">
    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/web_view_content"
        />
    <android.support.design.widget.NavigationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:itemTextColor="@color/whiteColor"
        android:background="@color/whiteColor"
        app:itemIconTint="@color/darkColor"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:background="@color/basicColor"
                >
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/splash_icon"
                    android:layout_gravity="center"
                    android:padding="5dp"

                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="Sports 19"
                    android:textColor="@color/whiteColor"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:padding="5dp"
                    />


            </LinearLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/tvNavGalleryLiveTvId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Live Tv"
                        android:textSize="20sp"
                        android:textColor="@color/blackColor"
                        android:layout_marginLeft="10dp"

                        android:drawableLeft="@drawable/ic_arrow"
                        android:padding="10dp"
                        />
                    <TextView
                        android:id="@+id/tvNavGalleryLiveScoreId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Live Score"
                        android:textSize="20sp"
                        android:textColor="@color/blackColor"
                        android:layout_marginLeft="10dp"

                        android:drawableLeft="@drawable/ic_arrow"
                        android:padding="10dp"
                        />
                    <TextView
                        android:id="@+id/tvNavGalleryPointTableId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Point Table"
                        android:textSize="20sp"
                        android:textColor="@color/blackColor"
                        android:layout_marginLeft="10dp"

                        android:drawableLeft="@drawable/ic_arrow"
                        android:padding="10dp"
                        />
                    <TextView
                        android:id="@+id/tvNavGalleryCricNewsId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cricket News"
                        android:textSize="20sp"
                        android:textColor="@color/blackColor"
                        android:layout_marginLeft="10dp"

                        android:drawableLeft="@drawable/ic_arrow"
                        android:padding="10dp"
                        />
                    <TextView
                        android:id="@+id/tvNavGalleryScheduleId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Schedules"
                        android:textSize="20sp"
                        android:textColor="@color/blackColor"
                        android:layout_marginLeft="10dp"

                        android:drawableLeft="@drawable/ic_arrow"
                        android:padding="10dp"
                        />
                    <TextView
                        android:id="@+id/tvNavGalleryRankingId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rankings"
                        android:textSize="20sp"
                        android:textColor="@color/blackColor"
                        android:layout_marginLeft="10dp"

                        android:drawableLeft="@drawable/ic_arrow"
                        android:padding="10dp"
                        />

                    <TextView
                        android:id="@+id/tvNavGallery_GalleryId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Gallery"
                        android:textSize="20sp"
                        android:textColor="@color/blackColor"
                        android:layout_marginLeft="10dp"

                        android:drawableLeft="@drawable/ic_arrow"
                        android:padding="10dp"
                        />

                    <TextView
                        android:id="@+id/tvNavGalleryVideoId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cricket Video"
                        android:textSize="20sp"
                        android:textColor="@color/blackColor"
                        android:layout_marginLeft="10dp"
                        android:drawableLeft="@drawable/ic_arrow"
                        android:padding="10dp"
                        />

                    <TextView
                        android:id="@+id/tvNavGalleryRateUsId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rate Us"
                        android:textSize="20sp"
                        android:textColor="@color/blackColor"
                        android:layout_marginLeft="10dp"

                        android:drawableLeft="@drawable/ic_arrow"
                        android:padding="10dp"
                        />
                    <TextView
                        android:id="@+id/tvNavGalleryFeedBackId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Feedback"
                        android:textSize="20sp"
                        android:textColor="@color/blackColor"
                        android:layout_marginLeft="10dp"
                        android:drawableLeft="@drawable/ic_arrow"
                        android:padding="10dp"
                        android:layout_marginBottom="10dp"
                        />


                </LinearLayout>

            </ScrollView>




        </LinearLayout>


    </android.support.design.widget.NavigationView>


</android.support.v4.widget.DrawerLayout>